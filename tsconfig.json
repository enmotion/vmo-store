{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

     /* alias 配置 */
     "baseUrl": "./", // 必须配置 baseUrl
     "paths": {
       "@src": ["src"], // 必须如此配置才能在ts中沿用 vite 的 alias 配置
       "@src/*": ["src/*"], // 两个都需要....
       "@type": ["types"], // 必须如此配置才能在ts中沿用 vite 的 alias 配置
       "@type/*": ["types/*"], // 两个都需要....
       "@comps": ["components"], // 必须如此配置才能在ts中沿用 vite 的 alias 配置
       "@comps/*": ["components/*"], // 两个都需要....
       "@lib": ["use.lib"], // 必须如此配置才能在ts中沿用 vite 的 alias 配置
       "@lib/*": ["use.lib/*"], // 两个都需要....
     }
  },
  "include": ["index.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*.ts", "use.lib/**/*.ts", "components/**/*.ts", "components/**/*.tsx", "components/**/*.vue"],
  "exclude": ["src/main.ts", "src/config/index.ts","src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
